<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="119dp"
        android:layout_x="73dp"
        android:layout_y="93dp"
        android:text="Give props to "
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_x="8dp"
        android:layout_y="386dp"
        android:background="@drawable/round_button"
        android:elevation="0dp"
        android:text="$0.50" />

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_x="272dp"
        android:layout_y="386dp"
        android:background="@drawable/round_button"
        android:elevation="0dp"
        android:text="$10" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_x="97dp"
        android:layout_y="387dp"
        android:background="@drawable/round_button"
        android:elevation="0dp"
        android:text="$1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:layout_y="325dp"
        android:text="Select an amount:"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_x="184dp"
        android:layout_y="387dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="0dp"
        android:text="$5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="127dp"
        android:layout_y="518dp"
        android:background="@android:color/transparent"
        android:text="Cancel"
        android:textColor="@android:color/darker_gray"
        android:textStyle="italic" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_x="-1dp"
        android:layout_y="0dp"
        android:background="@drawable/gradientbloo"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_header_logo" />

    </RelativeLayout>

</AbsoluteLayout>